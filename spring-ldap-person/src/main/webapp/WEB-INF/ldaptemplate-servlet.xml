<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- 
	  Exposes web flows for execution at a single request URL.
	  The id of a flow to launch should be passed in by clients using
	  the "_flowId" request parameter:
	      e.g. /ldaptemplate.htm?_flowId=search-flow
	-->
	<bean name="/ldaptemplate.htm" class="org.springframework.webflow.executor.mvc.FlowController">
		<property name="flowExecutor" ref="flowExecutor"/>
		<property name="cacheSeconds" value="5"/>
	</bean>

	<!-- Resolves flow view names to .jsp templates -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
</beans>